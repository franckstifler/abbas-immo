extends ../layouts/default

block content
	.banner
		//img(src="/images/bg2.jpg")
		#banner
		.talk
			h2 SCI ABBAS Immobilier
			div.typed
	.products
		.container
			.row
				.col-md-4.text-xs-center
					.banner
						a(href="#venteLocation"): img.img-rounded(src="/images/cards/1.png")
						.talk
							p ABBAS-IMMOBILIER
							span VENTE
				.col-md-4
					.banner
						a(href='#achat'): img.img-rounded(src="/images/cards/6.png")
						.talk
							p ABBAS-IMMOBILIER
							span LOCATION
				.col-md-4
					.banner
						a(href='#conseil'): img.img-rounded(src="/images/cards/3.png")
						.talk
							p ABBAS-IMMOBILIER
							span CONSEIL ET SUIVI TECHNIQUE
	#carousel-example-generic.carousel.slide(data-ride='carousel')
		ol.carousel-indicators
			li.active(data-target='#carousel-example-generic', data-slide-to='0')
			li(data-target='#carousel-example-generic', data-slide-to='1')
			li(data-target='#carousel-example-generic', data-slide-to='2')
		.carousel-inner(role='listbox')
			.carousel-item.active
				.carousel-caption
					a(href="https://abbas-immo.herokuapp.com/blog/post/32-logements-a-emana-yaounde")
						p.title Logements disponibles à Yaoundé!
					p.sub-title 32 logements à Emana, les réservations sont déjà en cours contactez nous.
					
			.carousel-item
				.carousel-caption
					a(href="https://abbas-immo.herokuapp.com/blog/post/immeuble-sous-sol-r7-bastos")
						p.title Appartements disponibles à Yaoundé!
					p.sub-title Notre immeuble sous-sol R+7, 23 appartements à louer à Bastos, derrière laboratoire Meka.
			.carousel-item
				.carousel-caption
					p.title ACTUALITES
					p.sub-title Contenu en cours de construction.
	div.seperator
	.container
		.row.featurette#venteLocation
			.col-lg-7
				.services-left
					h2.featurette-heading Vente de biens immobiliers
					span.text-muted Une expérience extraordinaire!
					p.lead À ABBAS-IMMO, nous vendons les biens immobiliers tels que 
						| terrains, maisons, immeubles... Nous avons des locations immobilières à
						| habitation ou de bureau (plein pied, duplex, espace magasin...). Il vous suffit de demander,
						| et notre équipe se chargera du reste.
			.col-lg-5
				img(src="/images/new/1.png")
		hr.featurette-divider
		.row.featurette#achat
			.col-lg-7.push-lg-5
				.services-right
					h2.featurette-heading Location des biens immobiliers
					span.text-muted Immeubles à tous les gouts!
					p.lead À ABBAS-IMMO, nous mettons en location divers biens immobiliers tels que 
						| terrains, maisons, immeubles que vous pourrez en faire votre habitation ou vos bureaux.
			.col-lg-5.pull-lg-7
				img(src="/images/new/2.png")
		hr.featurette-divider
		.row.featurette#conseil
			.col-lg-7
				.services-left
					h2.featurette-heading Conseil et suivi technique
					span.text-muted Des services de qualité comme nulle part ailleurs!
					p.lead À ABBAS-IMMO, nous vous offrons le meilleur choix possible au client, 
						| et nous vous apportons un suivi technique dans vos projets : architecturaux,
						| grâce à nos géomètres, géotechniciens, ingénieurs... pour vous aider au moindre cout dans vos réalisations.
			.col-lg-5
				img(src="/images/new/3.png")
			
			
			
